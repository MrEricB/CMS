<h1>All post</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td><img src="/uploads/{{file}}" alt="uploaded image" class="" height="50"></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td>{{generateDate date}}</td>
            <td><a href="/posts/{{slug}}" class="btn btn-info">View</a></td>
            {{!-- <td><a href="/admin/posts/edit/{{id}}" class="btn btn-primary">Edit</a></td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td> --}}
        </tr>
        {{/each}}
    </tbody>
</table>